[user]
	name = Sam Nguyen
	email = sam.nguyen@sendgrid.com

[core]
	quotepath = false
	excludesfile = ~/.dotfiles/gitignore_global

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = white bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    br = branch
    ci = commit
    ci = commit --verbose
    co = checkout
    df = diff
    dfc = diff --cached
    fa = fetch --all
    ff = merge --ff
    lg = log -p
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --date=relative --all
    ls = ls-files
    nff = merge --no-ff
    st = status

[merge]
	tool = vimdiff
