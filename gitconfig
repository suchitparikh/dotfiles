[user]
	name = Suchit Parikh
	email = suchit.parikh@sendgrid.com

[core]
	quotepath = false
	excludesfile = ~/.gitignore_global

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    br = branch
    ci = commit
    ci = commit --verbose
    cl = clean -fdx
    cn = clone
    co = checkout
    df = diff
    dfc = diff --cached -w
    f = fetch
    fa = fetch --all
    fap = fetch --all --prune
    ff = merge --ff
    fo = fetch origin
    fap = fetch --all --prune
    fop = fetch origin --prune
    fsp = fetch sp
    fspp = fetch sp --prune
    lg = log -p
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --date=relative --all
    ls = ls-files
    mt = mergetool
    nff = merge --no-ff
    pl = pull
    po = pull origin
    ps = push
    st = status

[merge]
	tool = vimdiff
[push]
	default = simple
    tool = vimdiff
[url "git@github.com:"]
	insteadOf = https://github.com/
[url "ssh://git@github.com/sendgrid"]
	insteadOf = https://github.com/sendgrid
